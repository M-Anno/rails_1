<div>
  <h1>Edit your profile</h1>
  <%= form_with model: @profile, local: true do |f| %>
    <div class="form-group">
      <%= f.label :avatar %> 
      <%= f.text_field :avatar %>
    </div>
    <div class="form-group">
      <%= f.label :name %> 
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :introduction %> 
      <%= f.text_area :introduction %><br>
    </div>
    <div class="submit-block">
      <%= f.submit class: "button" %>
    </div>
  <% end %>
</div>