<div>
  <h1>Create your profile</h1>
  <%= form_with model: @profile, local: true do |f| %>
    <div class="form-group">
      <%= f.label :avatar %><br/>
      <%= f.text_field :avatar %>
    </div>
    <div class="form-group">
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :introduction %><br/>
      <%= f.text_area :introduction %>
    </div>
    <div class="submit-block">
      <%= f.submit class: "button" %>
    </div>
  <% end %>
</div>