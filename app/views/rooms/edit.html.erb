<h1>Edit room</h1>
<div>
  <%= form_with model: @room, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name %> 
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :room_introduction %> 
      <%= f.text_field :room_introduction %>
    </div>
    <div class="form-group">
      <%= f.label :fee %> 
      <%= f.text_area :fee %><br>
    </div>
    <div class="form-group">
      <%= f.label :address %> 
      <%= f.text_area :address %><br>
    </div>
    <div class="form-group">
      <%= f.label :image %> 
      <%= f.text_area :image %><br>
    </div>
    <div class="form-group">
      <%= f.label :created_date %> 
      <%= f.text_area :created_date %><br>
    </div>
    <div class="submit-block">
      <%= f.submit class: "button" %>
    </div>
  <% end %>
</div>